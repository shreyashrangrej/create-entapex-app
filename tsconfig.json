{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES5",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "lib": ["es6", "dom"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "templates"]
}
